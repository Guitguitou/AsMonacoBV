<h2>Créer un créneau d'entrainement</h2>
<div class="container">
<%= simple_form_for @training do |f|  %>

    <%= f.label :training_type, label: "Type de créneau"  %>
    <%= f.select :training_type, ['Entraînement', 'Jeu libre', 'Tournoi'] %>
<br>
    <%= f.input :name, label: "Nom du créneau", placeholder: 'Entrainement ou Jeu libre ou tournoi' %>
    <%= f.input :start_time, label: "Date de début du créneau" %>
    <%= f.input :end_time, label: "Date de fin du créneau" %>
<br>

    <%= f.label :sex, label: "Sexe" %>
    <%= f.select :sex, ["Masculin", "Féminin", "Mixte"] , prompt: 'Sélectionner'%>
<br>
    <%= f.association :group, collection: @groups, label_method: :groupe_type, value_method: :id, placeholder: 'Groupe', label: "Groupe" %>
<br>
    <%= f.input :recurring %>

    <%= f.button :submit, class: "btn btn-ghost" %>
<% end %>
</div>
