active_admin_form_for [:admin, resource] do |f|
  f.inputs do
    f.input :name, label: "Nom du créneau", placeholder: 'Entrainement ou Jeu libre ou tournoi'
    f.input :start_time, :as => :string, :input_html => {:class => "datepicker"}
    f.input :end_time, :as => :string, :input_html => {:class => "datepicker"}

    f.label :sex, value: "Sexe"
    f.select :sex, ["Masculin", "Féminin", "Mixte"] , prompt: 'Sélectionner'
  end
  actions
end
